@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <script src="~/JQuery/jquery-3.6.1.js" crossorigin="anonymous"></script>
    <link href="~/bootstrap-5.2.3-dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap-5.2.3-dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/Custom-Css/style.css" rel="stylesheet" />
    <script src="~/JQuery-ui-1.13.2/jquery-ui.min.js" crossorigin="anonymous"></script>
    <link href="~/JQuery-ui-1.13.2/jquery-ui.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/select2-4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="~/select2-4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>

    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>*@

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.1/html2pdf.bundle.min.js" integrity="sha512vDKWohFHe2vkVWXHp3tKvIxxXg0pJxeid5eo+UjdjME3DBFBn2F8yWOE0XmiFcFbXxrEOR1JriWEno5Ckpn15A==" crossorigin="anonymous">
    </script>

    @*<script src="~/wwwroot/js/datatables.datatables.js"></script>
    <script src="~/wwwroot/js/datatables.bootstrap5.js"></script>
    <link href="~/wwwroot/css/jquery.datatables.css" rel="stylesheet" />
    <link href="~/wwwroot/css/datatables.bootstrap5.css" rel="stylesheet" />*@

</head>
<body>
    <!-- Topnav -->
    <div class="topNav container-fluid px-4" id="topnav">
        <div class="row">
            <div class="col-6">
                <h3 class="menu text-uppercase">Survey</h3>
            </div>
            <div class="col-6 d-flex align-items-center justify-content-end" ">
                @*<a class="d-block me-3 text-primary" id="logout" href="@Url.Action("Index", "Logout")">Go to Module</a>*@
                <div id="menu">
                    <div class="rounded-sm hamburger-bg">
                        <div class="hamburger-menu" id="hamburger-menu">
                            <div class="hamburger"></div>
                        </div>
                    </div>
                    <div class="menu-item shadow">
                        <div class="row justify-content-center">
                            <div class="col-6 mt-3 text-center">
                                <a href="/SurveyCreation" class="items d-block">
                                    <i class="fa-regular fa-square-plus fs-2"></i>
                                    <span class="d-block small text-uppercase">Survey Creation</span>
                                </a>
                            </div>
                            <div class="col-6 mt-3 text-center">
                                <a href="#" class="items d-block">
                                    <i class="fa-solid fa-list-ul fs-2"></i>
                                    <span class="d-block small text-uppercase">Survey List</span>
                                </a>
                            </div>
                            <div class="col-6 mt-3 text-center">
                                <a href="#" class="items d-block">
                                    <i class="fa-solid fa-info fs-2"></i>
                                    <span class="d-block small text-uppercase">Survey Details</span>
                                </a>
                            </div>
                            <div class="col-6 mt-3 text-center">
                                <a href="#" class="items d-block">
                                    <i class="fa-solid fa-pen fs-2"></i>
                                    <span class="d-block small text-uppercase">Create Survey</span>
                                </a>
                            </div>
                            <div class="col-6 mt-3 text-center">
                                <a href="#" class="items d-block">
                                    <i class="fa-solid fa-eye fs-2"></i>
                                    <span class="d-block small text-uppercase">View Survey</span>
                                </a>
                            </div>
                            <div class="col-12 mb-1 mt-2">
                                <hr class="dropdown-divider">
                            </div>
                            <div class="col-md-12 text-center user">
                                <span class="d-block">Welcome</span>
                                <span class="d-block fw-bold">@Accessor.HttpContext.Session.GetString("UserName")</span>
                            </div>
                            <div class="col-12 mt-2 text-primary">
                                <div class="d-flex align-items-center justify-content-center mx-3">
                                    <div class="text-danger userOpt">
                                        <i class="fa-solid fa-power-off"></i>
                                        <span>Logout</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Topnav -->
    <!-- Other contents will be here -->
    <div class="container py-4 py-md-0">
        <div class="row justify-content-center mt-3">
            <div class="col-md-12">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>
    <input type="hidden" id="hdUser" value="@Accessor.HttpContext.Session.GetString("UserName")" />
    <script src="~/Custom-js/common.js"></script>
    <script src="~/Custom-js/function.js"></script>
    <script src="~/Custom-js/style.js"></script>
</body>
</html>
