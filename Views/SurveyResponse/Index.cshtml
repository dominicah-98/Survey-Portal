@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    ViewBag.Title = "Mendine Survey | Survey Response Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="SurveyResponse">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex align-items-center justify-content-between">
                <span class="lead fs-3 d-block">
                    <label id="lblSurveyCode"></label>-
                    <label id="lblSurveyName"></label>
                    <input type="hidden" id="hdSurveyID" />
                    <input type="hidden" id="hdSurveyCat" />
                </span>
                <span class="d-block">
                    @*<input type="button" id="btnSurveyList" class="btn btn-outline-primary" value="Back"/>*@
                    <span class="lead fs-3">Full Marks: <label id="lblFullMarks" class="rounded-circle bg-primary p-1 text-white fs-5" style="font-weight:500;"></label></span>
                </span>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <a href="@Url.Action("Index", "SurveyCreation", new { UserName = Accessor.HttpContext.Session.GetString("UserName"), UserID =Accessor.HttpContext.Session.GetString("UserId"), UserEmail =Accessor.HttpContext.Session.GetString("UserEmail")})" class="btn btn-sm btn-outline-primary">Survey List</a>
            </div>
            <div id="divNormalSurvey" class="d-none">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link px-2 py-1 active fw-bold fs-6" id="profile-tab" data-bs-toggle="tab" data-bs-target="#divEmployee" type="button" role="tab">Employee</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link px-2 py-1 fw-bold fs-6" id="home-tab" data-bs-toggle="tab" data-bs-target="#divOutside" type="button" role="tab">Outside</button>
                    </li>
                </ul>
                <div class="tab-content mt-2" id="myTabContent">
                    <div class="tab-pane fade show active" id="divEmployee" role="tabpanel">
                        <div class="table-responsive table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Employee Name</th>
                                        @*<th scope="col">Dept Name</th>*@
                                        <th scope="col">Response</th>
                                        <th scope="col">Retag</th>
                                        <th scope="col">Marks</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblResponseEmp">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="divOutside" role="tabpanel">
                        <div class="table-responsive table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">User Name</th>
                                        <th scope="col">User Email</th>
                                        <th scope="col">Response</th>
                                        <th scope="col">Marks</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblResponse">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="divGenericSurvey" class="d-none">
                <div class="row mt-3">
                    <div class="col-md-2">
                        <label class="">Choose Question:</label>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select form-select-sm" id="ddlQuestions">
                        </select>
                    </div>
                </div>
                <div class="mt-3" id="divQuestionDetails">
                </div>
            </div>
            <div id="divAppraisalSurvey" class="d-none">
                <div class="table-responsive table-hover">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Employee Name</th>
                                @*<th scope="col">Dept Name</th>*@
                                <th scope="col">Response</th>
                                <th scope="col">Retag</th>
                                <th scope="col">Appraisee</th>
                                <th scope="col">Marks</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody id="tblApprResponseEmp">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="ModalSurveyResponse" data-keyboard="false" and data-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-fullscreen" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">
                        <label class="fw-bold">SURVEY</label>
                        <label id="lblHeaderDetail" class="fw-bold"></label>
                        <input type="hidden" id="hdIDSurveyDetail" />
                    </div>
                </div>
                <div class="modal-body" style="height:200px;overflow:scroll">
                    <div class="row mb-2">
                        <div class="col-md-2">
                            <label class="">Title</label>
                        </div>
                        <div class="col-md-10">
                            <label id="lblTitle" class="fs-6" style="font-weight: 500;"></label>
                            @*<input type="text" id="txtTitle" class="form-control form-control-sm" maxlength="100" />*@
                        </div>
                    </div>
                    <div class="row mb-2 mb-3">
                        <div class="col-md-2">
                            <label>Description</label>
                        </div>
                        <div class="col-md-10">
                            <label id="lblDescription" class="fs-6"></label>
                            @*<input type="text" id="txtDescription" class="form-control form-control-sm" maxlength="500" />*@
                        </div>
                    </div>
                    @*<div class="row mb-2">
                    <div class="col-md-2">
                    <label>Marks</label>
                    </div>
                    <div class="col-md-4">
                    <input type="text" id="txtMarks" class="form-control form-control-sm" maxlength="5" />
                    </div>
                    <div class="col-md-2">
                    <label>Timer</label>
                    </div>
                    <div class="col-md-4">
                    <input type="number" id="txtTime" class="form-control form-control-sm" maxlength="5" />
                    </div>
                    </div>*@
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-10" id="UserContainer">
                        </div>
                        <div class="col-md-10" id="QuestionContainer">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSaveResponseMarks" class="btn btn-sm btn-primary">Save</button>
                    <button type="button" id="btnCloseResponse" class="btn btn-sm btn-secondary">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/ProjectJS/SurveyResponse.js"></script>